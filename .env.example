# Database Configuration
DATABASE_URL=postgresql://travel_user:travel_pass@localhost:5432/travel_concierge
POSTGRES_USER=travel_user
POSTGRES_PASSWORD=travel_pass
POSTGRES_DB=travel_concierge

# JWT Authentication
SECRET_KEY=your-secret-key-change-this-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# LLM Configuration
OLLAMA_BASE_URL=http://localhost:11434
LLM_MODEL=llama3:8b
EMBEDDING_MODEL=all-MiniLM-L6-v2

# Vector Store
CHROMA_HOST=localhost
CHROMA_PORT=8000
CHROMA_PERSIST_DIRECTORY=./data/chroma

# Redis Cache
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0

# External APIs (use your own keys)
OPENWEATHER_API_KEY=your-openweather-api-key
FLIGHT_API_KEY=your-flight-api-key
HOTEL_API_KEY=your-hotel-api-key

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_DAY=1000

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json

# File Upload
MAX_UPLOAD_SIZE_MB=10
UPLOAD_DIR=./data/uploads
